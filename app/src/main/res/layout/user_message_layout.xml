<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.darkular.tickets.ui.core.CustomImageView
        android:id="@+id/userAvatarImageView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        tools:src="@tools:sample/avatars"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <com.darkular.tickets.ui.core.CustomTextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_72"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@drawable/user_message_bubble"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textIsSelectable="true"
        tools:text="Hello, how are you doing there? Let's suppose I write you too long message" />
</LinearLayout>